{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": ["es5", "dom"],
    "types": ["node", "jest"],
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "baseUrl": ".",
    "outDir": "./dist"
  },
  "include": ["src"],
}
